<h1>These are my tasks for today!</h1>

<%= form_for :task, url: tasks_path do |f| %>
  <p>
  <%= f.label :name %><br>
  <%= f.text_field :name %>
  </p>

  <p>
    <%= f.submit "Add task", class: "btn btn-large btn-primary" %>
  </p>
<% end %>



